# Application
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=whatsapp_bot
DB_USER=whatsapp_user
DB_PASSWORD=your_strong_password_here
DB_SSL=false

# JWT
JWT_SECRET=your_256_bit_secret_key_here_use_openssl_rand_base64_32
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# WebAuthn
RP_ID=localhost
RP_NAME=WhatsApp Manager
RP_ORIGIN=http://localhost:5173

# Storage
STORAGE_BASE_PATH=C:/whatsapp-data
MAX_FILE_SIZE=104857600

# CORS
ALLOWED_ORIGINS=http://localhost:5173

# WhatsApp
WA_SESSION_PATH=C:/whatsapp-data/whatsapp-session

# WebSocket
WS_PORT=3001

# History Sync
HISTORY_SYNC_ON_START=true
HISTORY_SYNC_INCLUDE_MEDIA=true
HISTORY_SYNC_MAX_MESSAGES=
