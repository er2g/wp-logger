# Application
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=whatsapp_bot
DB_USER=whatsapp_user
DB_PASSWORD=your_strong_password_here
DB_SSL=false

# JWT
JWT_SECRET=your_256_bit_secret_key_here_use_openssl_rand_base64_32
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_me
ADMIN_SESSION_EXPIRY=30d

# WebAuthn
RP_ID=localhost
RP_NAME=WhatsApp Manager
RP_ORIGIN=http://localhost:5173

# Storage
STORAGE_BASE_PATH=C:/whatsapp-data
MAX_FILE_SIZE=104857600

# CORS
ALLOWED_ORIGINS=http://localhost:5173

# WhatsApp
WA_SESSION_PATH=C:/whatsapp-data/whatsapp-session

# WebSocket
WS_PORT=3001

# OCR
OCR_ENABLED=true
OCR_PROVIDER=azure
OCR_FALLBACK_PROVIDER=
OCR_LANGUAGE=unk
OCR_CONCURRENCY=2
OCR_POLL_INTERVAL_MS=5000
OCR_MAX_ATTEMPTS=3
OCR_MAX_FILE_SIZE_MB=25
OCR_AZURE_ENDPOINT=https://your-resource.cognitiveservices.azure.com
OCR_AZURE_KEY=your_azure_key
OCR_AZURE_API_VERSION=v3.2
OCR_AZURE_POLL_INTERVAL_MS=1000
OCR_AZURE_MAX_POLLS=120

# History Sync
HISTORY_SYNC_ON_START=true
HISTORY_SYNC_INCLUDE_MEDIA=true
HISTORY_SYNC_MAX_MESSAGES=
